+	mutex_unlock(&ipts.dev->struct_mutex);
+
+	spin_lock_init(&ipts.buffers.lock);
+	INIT_LIST_HEAD(&ipts.buffers.list);
+
+	ipts.ipts_context = ipts_ctx;
+
+	return 0;
+
+err_ctx:
+	if (ipts_ctx)
+		i915_gem_context_put(ipts_ctx);
+
+err_unlock:
+	mutex_unlock(&ipts.dev->struct_mutex);
+
+	return ret;
