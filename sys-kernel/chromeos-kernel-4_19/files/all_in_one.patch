+		return -EPERM;
+
+	skb = cfg80211_vendor_cmd_alloc_reply_skb(wiphy, 8);
+	if (!skb)
+		return -ENOMEM;
+
+	nla_put_u8(skb, MWL_VENDOR_ATTR_BF_TYPE, priv->bf_type);
+
+	return cfg80211_vendor_cmd_reply(skb);
