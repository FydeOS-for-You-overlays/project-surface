+static int get_resolution_index(struct v4l2_subdev *sd,
+				int w, int h)
+{
+	struct ov5693_device *dev = to_ov5693_sensor(sd);
+	int i;
+
+	for (i = 0; i < dev->curr_res_num; i++) {
+		if (w != dev->ov5693_res[i].width)
+			continue;
+		if (h != dev->ov5693_res[i].height)
+			continue;
+
+		return i;
+	}
+
+	return -1;
+}
