+
+struct surfacegen5_san_acpi_consumer {
+	char *path;
+	bool  required;
+	u32   flags;
+};
+
+struct surfacegen5_san_opreg_context {
+	struct acpi_connection_info connection;
+	struct device *dev;
+};
+
+struct surfacegen5_san_consumers {
+	u32                  num;
+	struct device_link **links;
+};
